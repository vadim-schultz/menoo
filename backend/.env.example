# Menoo Environment Configuration

# Litestar
LITESTAR_APP=app.main:app

# Application
APP_NAME=Menoo
DEBUG=true
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=sqlite+aiosqlite:///./menoo.db
DATABASE_ECHO=false

# OpenAI / Marvin
OPENAI_API_KEY=your-openai-api-key-here
MARVIN_CACHE_ENABLED=true
MARVIN_CACHE_TTL_SECONDS=3600

# Rate Limiting
SUGGESTION_RATE_LIMIT=10
SUGGESTION_RATE_PERIOD=60

# Logging
LOG_LEVEL=INFO
LOG_JSON=false

# CORS
CORS_ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:5173","http://localhost:8000"]
